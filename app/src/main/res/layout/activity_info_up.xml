<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:theme="@style/UPd"
    android:background="@drawable/gradient3"
    tools:context="com.example.concessionform.InfoUp">
<LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            app:cardBackgroundColor="#FFFF"
            android:layout_width="340dp"
            android:layout_height="150dp"
            android:layout_margin="10dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:requiresFadingEdge="horizontal|vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/cerclebackgroundgreen"
                    android:padding="10dp"
                    android:src="@drawable/ic_control_point_black_24dp"
                    android:elevation="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp"
                    android:text="Update Information"
                    android:textStyle="bold" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/name"
                    style="@style/profileEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="#49ffffff"
                    android:ems="10"
                    android:hint="Name"
                    android:text=""
                    android:textColor="#000000"

                    android:textColorHint="#5c5656" />
                <EditText
                    android:id="@+id/surname"
                    style="@style/profileEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="#49ffffff"
                    android:ems="10"
                    android:hint="Surname"
                    android:text=""
                    android:textColor="#000000"

                    android:textColorHint="#5c5656" />

                <EditText
                    android:id="@+id/address"
                    style="@style/profileEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="#49ffffff"
                    android:ems="10"
                    android:hint="Apartment"
                    android:inputType="textPostalAddress"
                    android:text=""
                    android:textColor="#000000"

                    android:textColorHint="#5c5656" />
                <EditText
                    android:id="@+id/address1"
                    style="@style/profileEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="#49ffffff"
                    android:ems="10"
                    android:hint="Street Name"
                    android:inputType="textPostalAddress"
                    android:text=""
                    android:textColor="#000000"

                    android:textColorHint="#5c5656" />
                <EditText
                    android:id="@+id/address2"
                    style="@style/profileEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="#49ffffff"
                    android:ems="10"
                    android:hint="Locality"
                    android:inputType="textPostalAddress"
                    android:text=""
                    android:textColor="#000000"

                    android:textColorHint="#5c5656" />

                <EditText
                    android:id="@+id/address3"
                    style="@style/profileEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="#49ffffff"
                    android:ems="10"
                    android:hint="Pin Code"
                    android:inputType="number"
                    android:text=""

                    android:textColor="#000000"
                    android:textColorHint="#5c5656" />

                <RadioGroup
                    android:id="@+id/Gender"
                    style="@style/profileEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="25dp"
                    android:background="#49ffffff"
                    android:ems="10"
                    android:orientation="horizontal"
                    android:textColor="#878787">

                    <RadioButton
                        android:id="@+id/male"
                        style="@style/profileEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#49ffffff"
                        android:buttonTint="#33b6e1"
                        android:ems="10"
                        android:orientation="horizontal"
                        android:text="Male"
                        android:textColor="#5c5656"
                        android:textStyle="bold" />

                    <RadioButton

                        android:id="@+id/female"
                        style="@style/profileEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="#49ffffff"
                        android:buttonTint="#f232a5"
                        android:ems="10"
                        android:orientation="horizontal"
                        android:text="Female"
                        android:textColor="#5c5656"
                        android:textStyle="bold" />

                </RadioGroup>

                <EditText
                    android:id="@+id/station"
                    style="@style/profileEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="#49ffffff"
                    android:ems="10"
                    android:hint="Station"
                    android:textColor="#000000"
                    android:textColorHint="#5c5656"/>

                <RadioGroup
                    android:id="@+id/Cla"
                    style="@style/profileEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="25dp"
                    android:background="#49ffffff"
                    android:ems="10"
                    android:orientation="horizontal"
                    android:textColor="#878787">

                    <RadioButton
                        android:id="@+id/firstcl"
                        style="@style/profileEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#49ffffff"
                        android:buttonTint="#FA5252"
                        android:ems="10"
                        android:orientation="horizontal"
                        android:text="1st Class"
                        android:textColor="#5c5656"
                        android:textStyle="bold" />

                    <RadioButton

                        android:id="@+id/secondcl"
                        style="@style/profileEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="#49ffffff"
                        android:buttonTint="#FA5252"
                        android:ems="10"
                        android:orientation="horizontal"
                        android:text="2nd Class"
                        android:textColor="#5c5656"
                        android:textStyle="bold" />

                </RadioGroup>

                <Spinner
                    android:id="@+id/year"
                    style="@style/profileEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="#49ffffff"
                    android:ems="10"
                    android:spinnerMode="dropdown"
                    android:textColor="#878787"
                    android:textColorHint="#000000" />

                <Spinner
                    android:id="@+id/stream"
                    style="@style/profileEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="#49ffffff"
                    android:ems="10"
                    android:spinnerMode="dropdown" />

                <RadioGroup
                    android:id="@+id/Duration"
                    style="@style/profileEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="25dp"
                    android:background="#49ffffff"
                    android:ems="10"
                    android:orientation="horizontal"
                    android:textColor="#878787">

                    <RadioButton
                        android:id="@+id/month"
                        style="@style/profileEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#49ffffff"
                        android:buttonTint="#49A52F"
                        android:ems="10"
                        android:orientation="horizontal"
                        android:text="Monthly"
                        android:textColor="#5c5656"
                        android:textStyle="bold" />

                    <RadioButton

                        android:id="@+id/quart"
                        style="@style/profileEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="#49ffffff"
                        android:buttonTint="#49A52F"
                        android:ems="10"
                        android:orientation="horizontal"
                        android:text="Quarterly"
                        android:textColor="#5c5656"
                        android:textStyle="bold" />

                </RadioGroup>

                <EditText
                    android:id="@+id/Bday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="date"

                    style="@style/profileEditText"

                    android:layout_marginTop="25dp"
                    android:background="#49ffffff"

                    android:hint="Birthday(M/D/Y)"

                    android:text=""
                    android:textColor="#000000"

                    android:textColorHint="#5c5656"/>

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edbutton"
                    android:elevation="30dp"
                    android:text="Update"
                    android:onClick="Update"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>


</LinearLayout>